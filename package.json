{
  "name": "nous",
  "version": "1.0.0",
  "description": "A modern, single-page Nous web application for monitoring study habits and time tracking",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8081",
    "build": "npx tailwindcss -i ./src/input.css -o ./tailwind-output.css --minify",
    "build:watch": "npx tailwindcss -i ./src/input.css -o ./tailwind-output.css --watch",
    "deploy": "echo 'Deploy to Netlify by connecting your repository'"
  },
  "keywords": [
    "nous",
    "time-tracking",
    "habits",
    "firebase",
    "react",
    "tailwind"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "canvas": "^3.2.0",
    "firebase": "^12.3.0",
    "firebase-admin": "^13.5.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "playwright": "^1.56.0",
    "tailwindcss": "^3.4.18"
  }
}
